extends layout

block content

  h1 Sign up area
  p to sign up please provide your user information to the following form
  br
  .main.container


    form(method='post' action='/signup')
      table
        tr
          td
            div.form-group
              label(for='username') Username:
          td
            input#username.form-control(required='true', value='somename', type='text', placeholder='username', name='username')
        tr
          td
            div.form-group
              label(for='password1') Password:
          td
           input#password1.form-control(required='true', value='somepw', type='password', name='password1')
        tr
          td
            div.form-group
              label(for='password2') Confirm Password:
          td
            input#password2.form-control(required='true', value='somepw', type='password', name='password2')
        tr
          td
            div.form-group
              label(for='email') E-mail Address:
          td
            input#email.form-control(required='true', value='some@ema.il', type='email', name='email')
      br
      button.btn.btn-primary(type='submit') Sign up
    a(class='button' href='/login') Log in
    div(style="color: red")

      ul
        each key in info
          li=key
